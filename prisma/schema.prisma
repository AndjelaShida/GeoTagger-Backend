generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ActionType {
  CLICK
  SCROLL
  ADDED_VALUE
  CHANGED_VALUE
  REMOVED_VALUE
}

enum ComponentType {
  BUTTON
  LINK 
  INPUT
  CHECKBOX
  RADIO
  DROPDOWN
  NONE
}


model User {
  id               String    @id @default(cuid())
  username         String    @unique
  email            String    @unique
  password         String
  points           Int       @default(10)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  resetToken       String?
  resetTokenExpiry DateTime? //vreme do kad token

  locations Location[] // 1 user ima vise Location(OneToMany)
  guesses   Guess[] //1 user ima vise Guess(OneToMany)
  logs      ActionLog[] // //1 user ima vise ActionLog(OneToMany)

  UserOfAuth     UserOfAuth[]
  roles          Role[]          @relation("UserRoles") //1 korisnik moze imati vise uloga
  passwordResets PasswordReset[]
}

model Role {
  id          String  @id @default(cuid())
  description String?
  name        String  @unique
  users       User[]  @relation("UserRoles") //veza sa user modelom
}

model UserOfAuth {
  id         String @id @default(cuid())
  provider   String
  providerId String
  userId     String
  user       User   @relation(fields: [userId], references: [id])
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Location {
  id        String   @id @default(cuid())
  latitude  Float //geografska sirina
  longitude Float //geografska duzina
  imageUrl  String //string jer se cuva link slike(npr na amazon s3 url)
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id]) //svaka location pripada 1 useru
  userId  String //vise lokacija moze pripadati 1 useru
  guesses Guess[] //svaka Location moze imati vise Guess

  @@index([createdAt])
  @@index([latitude, longitude]) //pretrazivanje po kordinatama
}

model Guess {
  id        String   @id @default(cuid())
  latitude  Float
  longitude Float
  distance  Float
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id]) //svaki pogodak ima 1 usera
  userId String //vise pogodaka moze pripadati 1 useru

  location   Location @relation(fields: [locationId], references: [id]) //svaki pogodak je za 1 lokaciju
  locationId String //foregin key) -> Location.id, vise pogodaka moze pripradati istoj lokaciji
}

model ActionLog {
  id        String   @id @default(cuid())
  userId    String? //opciono-da bi se cuvali logovi i za neregistrovane korisnike
  action    ActionType
  component ComponentType
  newValue  String?
  url       String
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id]) //1 akcija ima 1 usera

  @@index([createdAt])
}
